#include "adc.h"
#include "lcd.h"
#include "lm35_sensor.h"

int main(){
	ADC_ConfigType Sensor={AREF,F_CPU_8};
	LCD_init();
	ADC_init(&Sensor);
	LCD_displayString("Temp =   C");
	uint8 sensor_temp=0;
	LCD_moveCursor(0,6);
	uint16 digital_value;
	while(1){

		LCD_moveCursor(0,6);
        sensor_temp= LM35_GetTemperature();
		if(sensor_temp>=100){
			LCD_intgerToString(sensor_temp);
		}
		else{
			LCD_intgerToString(sensor_temp);
			LCD_displayCharacter(' ');

		}






	}
}
