#include "adc.h"
#include "lcd.h"
#include "lm35_sensor.h"
#include "motor.h"

int main(){
	DcMotor_Init();
	ADC_ConfigType Sensor={INTERNAL_REF_VOLT,F_CPU_8};
	LCD_init();
	ADC_init(&Sensor);
	LCD_displayString("Temp =   C");
	uint8 sensor_temp=0;
	LCD_moveCursor(0,6);
	while(1){

		LCD_moveCursor(0,6);
		sensor_temp= LM35_GetTemperature();
		if(sensor_temp < 30){
			DcMotor_Rotate(OFF,0);

		}
		else if(sensor_temp >=30 && sensor_temp <60){
			DcMotor_Rotate(OFF,25);

		}

		else if(sensor_temp>=60 && sensor_temp <90){
			DcMotor_Rotate(OFF,50);

		}
		else if(sensor_temp>=90){

			DcMotor_Rotate(OFF,75);


		}



	}
