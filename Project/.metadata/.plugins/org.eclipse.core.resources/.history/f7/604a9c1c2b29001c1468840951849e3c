#ifndef ADC_H_
#define ADC_H_
#include "std_types.h"

#define ADC_REFERANCE_VOLTAGE 5
#define ADC_NUMBER_OF_BITS 10
#define ADC_MAX_VALUE 1023

/* Type definitions*/


typedef enum{

	AREF, AVCC,INTERNAL_REF_VOLT = 4

}ADC_ ReferenceVolatge;







/*Function declarations*/


/*function that initalizes the ADC driver*/
void ADC_init();

/*function that reads the ADC channel */
uint16 ADC_readChannel(uint8 channel_number);



